<h1>Listing artists</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Popularity</th>
  </tr>

<% for artist in @artists %>
  <tr>
    <td><%=h artist.name %></td>
    <td><%=h artist.popularity %></td>
    <td><%= link_to 'Show', artist %></td>
  </tr>
<% end %>
</table>

<br />

<%= will_paginate @artists %>
