<h1>Listing associations</h1>

<%= link_to 'Recalculate association', '' %>

<table>
  <tr>
    <th>Song</th>
    <th>Next song</th>
    <th>Value</th>
  </tr>

<% for association in @associations %>
  <tr>
    <td><%=h association.predecessor.name %></td>
    <td><%=h association.successor.name %></td>
    <td><%=h association.degree %></td>
    <td><%= link_to 'Show', association %></td>
    <td><%= link_to 'Rate', '' %></td>
  </tr>
<% end %>
</table>

<br />

<%= will_paginate @associations %>
