<h1>Listing associations</h1>
<% unless @first_song.nil? %>
<h2>for <%= @first_song.title %></h2>
<% end%>

<table>
  <tr>
    <% if @first_song.nil? %><th>Song</th><% end %>
    <th>Next Song</th>
    <th>Parameter</th>
    <th>Degree</th>
  </tr>

<% @associations.each do |association| %>
  <tr>
	<% if @first_song.nil? %><td><%= link_to association.cooccurrence.first_song.title, :controller => "songs", :action => "show", :id => association.cooccurrence.song_id %></td><% end %>
    <td><%=h association.cooccurrence.next_song.title %></td>
    <td><%= link_to 'Parameters', parameter_path(association.parameter) %></td>
    <td><%=h association.degree %></td>
    <td><%= link_to 'Evaluate', association %></td>
  </tr>
<% end %>
</table>

<br />

<%= will_paginate @associations %>
