<h1>Listing genres</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Estimated popularity</th>
  </tr>

<% for genre in @genres %>
  <tr>
    <td><%=h genre.name %></td>
    <td><%=h genre.csp %></td>
    <td><%= link_to 'Show', genre %></td>
  </tr>
<% end %>
</table>

<br />

<%= will_paginate @genres %>
